{
    "name": "xyu/heroku-wp",
    "require": {
        "hhvm": "~3.1.0",
        "WordPress/WordPress": "*",
        "wpackagist-plugin/jetpack": "~3.0.0"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "WordPress/WordPress",
                "type": "webroot",
                "version": "3.9.1",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/3.9.1.zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "~1.1"
                }
            }
        },
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        }
    ],
    "extra": {
        "webroot-dir": "public",
        "webroot-package": "WordPress/WordPress",
        "installer-paths": {
            "public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugins"],
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "mv public public.prebuild"
        ],
        "post-install-cmd": [
            "cp -R public.prebuild/* public/.",
            "rm -rf public.prebuild"
        ]
    }
}